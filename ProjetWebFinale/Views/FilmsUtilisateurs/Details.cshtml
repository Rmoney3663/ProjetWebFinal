@model ProjetWebFinale.Models.Films

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Films</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Année de sortie:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnneeSortie)
        </dd>
        <dt class="col-sm-2">
            Catégorie:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorie)
        </dd>
        <dt class="col-sm-2">
            Date de mise à jour:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateMAJ)
        </dd>
        <dt class="col-sm-2">
            Mise à jour effectué par:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateurs.NomUtilisateur)
        </dd>
        <dt class="col-sm-2">
            Résumé:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resume)
        </dd>
        <dt class="col-sm-2">
            Sous-titre(s):
        </dt>
        @if (Model.FilmsSousTitres != null && Model.FilmsSousTitres.Any())
        {
            <dd class="col-sm-10">
                @string.Join(", ", Model.FilmsSousTitres.Select(fa => fa.SousTitres?.LangueSousTitre))
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Aucun sous-titres pour ce film
            </dd>
        }
        <dt class="col-sm-2">
            Durée (minutes):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DureeMinutes)
        </dd>
        <dt class="col-sm-2">
            Film original:
        </dt>
        @if (Model.FilmOriginal == true)
        {
            <dd class="col-sm-10">
                Oui
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Non
            </dd>
        }
        <dt class="col-sm-2">
            Image de la pochette:
        </dt>
        <dd class="col-sm-10">
            <img src="~/liste-vignettes/@(Model.Id).jpg" alt="Film Image" />
        </dd>
        <dt class="col-sm-2">
            Langue(s):
        </dt>
        @if (Model.FilmsLangues != null && Model.FilmsLangues.Any())
        {
            <dd class="col-sm-10">
                @string.Join(", ", Model.FilmsLangues.Select(fa => fa.Langues?.Langue))
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Aucune langues pour ce films
            </dd>
        }
        <dt class="col-sm-2">
            Nombre de disques:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NbDisques)
        </dd>
        <dt class="col-sm-2">
            Titre en français:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitreFrancais)
        </dd>
        <dt class="col-sm-2">
            Titre original:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitreOriginal)
        </dd>
        <dt class="col-sm-2">
            Version étendue:
        </dt>
        @if (Model.VersionEtendue == true)
        {
            <dd class="col-sm-10">
                Oui
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Non
            </dd>
        }
        <dt class="col-sm-2">
            Extras:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Xtra)
        </dd>
        <dt class="col-sm-2">
            Format:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formats.Description)
        </dd>
        <dt class="col-sm-2">
            Réalisateur:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Realisateurs.Nom)
        </dd>
        <dt class="col-sm-2">
            Acteur(s):
        </dt>
        @if (Model.FilmsActeurs != null && Model.FilmsActeurs.Any())
        {
            <dd class="col-sm-10">
                @string.Join(", ", Model.FilmsActeurs.Select(fa => fa.Acteurs?.Nom))
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Aucun acteurs pour ce film
            </dd>
        }
        <dt class="col-sm-2">
            Producteur:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producteurs.Nom)
        </dd>
        <dt class="col-sm-2">
            Emprunteur:
        </dt>
        @if (Model.EmpruntsFilms != null && Model.EmpruntsFilms.Any())
        {
            <dd class="col-sm-10">
                @string.Join(", ", Model.EmpruntsFilms.Select(fa => fa.Utilisateurs?.NomUtilisateur))
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                N/A
            </dd>
        }
        <dt class="col-sm-2">
            Propriétaire:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UtilisateurProprietaire.NomUtilisateur)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
