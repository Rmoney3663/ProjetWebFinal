@model ProjetWebFinale.Models.Films

@{
    ViewData["Title"] = "Create";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Utilisateurs> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <head>
        <meta http-equiv="refresh" content="0; url=https://localhost:7267/Films" />
    </head>
}
else 
{
    <head>
        <meta http-equiv="refresh" content="0; url=https://localhost:7267/Account/Login" />
    </head>
}
<h1>Create</h1>

<h4>Films</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">              
                <label asp-for="AnneeSortie" class="control-label">Année de sortie du film:</label>
                <select asp-for="AnneeSortie" class="form-control" id="AnneeSortie" name="AnneeSortie"></select>
                <span asp-validation-for="AnneeSortie" class="text-danger"></span>
                <script>
                    var currentYear = new Date().getFullYear();
                    var yearSelect = document.getElementById("AnneeSortie");
                    for (var year = currentYear; year >= 1900; year--) {
                        var option = document.createElement("option");
                        option.value = year;
                        option.text = year;
                        yearSelect.add(option);
                    }
                </script>
            </div>
            <div class="form-group">
                <label asp-for="Categorie" class="control-label">Categorie:</label>
                 <select asp-for="Categorie" class ="form-control" asp-items="ViewBag.Categorie"></select>
                <span asp-validation-for="Categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Format" class="control-label"></label>
                <select asp-for="Format" class ="form-control" asp-items="ViewBag.Format"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateMAJ" class="control-label"></label>
                <input asp-for="DateMAJ" class="form-control" />
                <span asp-validation-for="DateMAJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoUtilisateurMAJ" class="control-label"></label>
                <select asp-for="NoUtilisateurMAJ" class ="form-control" asp-items="ViewBag.NoUtilisateurMAJ"></select>
            </div>
            <div class="form-group">
                <label asp-for="Resume" class="control-label">Resumé du film:</label>
                <input asp-for="Resume" class="form-control" />
                <span asp-validation-for="Resume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DureeMinutes" class="control-label">Durée en minute du film: </label>
                <input asp-for="DureeMinutes" class="form-control" />
                <span asp-validation-for="DureeMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmOriginal" class="control-label"></label>
                <input asp-for="FilmOriginal" class="form-control" />
                <span asp-validation-for="FilmOriginal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePochette" class="control-label">Image de l'affiche de film :</label>
                <input type="file" id="ImagePochette" name="ImagePochette" accept="image/jpeg" class="form-control" />
                <span asp-validation-for="ImagePochette" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbDisques" class="control-label">Nombre de disques:</label>
                <input asp-for="NbDisques" class="form-control" />
                <span asp-validation-for="NbDisques" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitreFrancais" class="control-label">Titre en Francais du film:</label>
                <input asp-for="TitreFrancais" class="form-control" />
                <span asp-validation-for="TitreFrancais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitreOriginal" class="control-label">Titre Original du film:</label>
                <input asp-for="TitreOriginal" class="form-control" />
                <span asp-validation-for="TitreOriginal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionEtendue" class="control-label"></label>
                <input asp-for="VersionEtendue" class="form-control" />
                <span asp-validation-for="VersionEtendue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoRealisateur" class="control-label">Nom du realisateur:</label>
                <select asp-for="NoRealisateur" class ="form-control" asp-items="ViewBag.NoRealisateur"></select>
            </div>
            <div class="form-group">
                <label asp-for="NoProducteur" class="control-label">Nom du producteur:</label>
                <select asp-for="NoProducteur" class ="form-control" asp-items="ViewBag.NoProducteur"></select>
            </div>            
            <div class="form-group">
                <label asp-for="NoUtilisateurProprietaire" class="control-label">Nom du proprietaire du film:</label>
                <select asp-for="NoUtilisateurProprietaire" class ="form-control" asp-items="ViewBag.NoUtilisateurProprietaire"></select>
            </div>
            <div class="form-group">
                <label asp-for="Xtra" class="control-label">Extra info:</label>
                <input asp-for="Xtra" class="form-control" />
                <span asp-validation-for="Xtra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
